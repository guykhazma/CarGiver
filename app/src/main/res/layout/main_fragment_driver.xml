<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/start_driving_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By clicking \'Start Driving\' you will start the data collection"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/please_drive_safe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please drive safe"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:gravity="center"
            />

        <Button
            android:id="@+id/driving_page"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:text="start driving" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
