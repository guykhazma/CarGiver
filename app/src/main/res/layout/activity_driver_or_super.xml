<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appspot.com.cargiver.DriverOrSuperActivity"
    android:layoutDirection="ltr"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="please choose your activity"
            android:fontFamily="casual"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            />

            <Button
                android:id="@+id/supervisor_user"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="@drawable/login_super_btn"
                android:fontFamily="normal"
                android:gravity="center"
                android:onClick="SuperMain"
                android:text="I Am \nSupervisor"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/driver_user"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="@drawable/login_driver_btn"
                android:fontFamily="normal"
                android:gravity="center"
                android:onClick="DriverMain"
                android:text="I Am \nDriver"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
