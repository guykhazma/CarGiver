<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appspot.com.cargiver.DriverOrSuperActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="382dp"
        android:layout_height="577dp"
        app:srcCompat="@drawable/fui_idp_button_background_twitter"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please choose your activity"
            android:fontFamily="casual"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#d7ecfd"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/supervisor_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="SuperMain"
            app:srcCompat="@drawable/i_am_a_supervisor"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="63dp" />

        <ImageButton
            android:id="@+id/driver_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DriverMain"
            app:srcCompat="@drawable/i_am_a_driver"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="320dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
